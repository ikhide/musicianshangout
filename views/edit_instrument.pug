extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action = '/instruments/edit/'+instrument._id)
            .form-group
                label Title:
                input.form-control(name='title', type='text', value=instrument.title)
            .form-group
                label Description: 
                textarea.form-control(name='description') #{instrument.description}
            input.btn.btn-primary(type='submit', name ='submit' value='save')
            a.btn.btn-danger(href='/manage/instruments') Back