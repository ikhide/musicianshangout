extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action = '/articles/add')
            .form-group
                label Title:
                input.form-control(name='title', type='text')
            .form-group
                label Subtitle:
                input.form-control(name='subtitle', type='text')
            .form-group
                label Instrument:
                select.form-control(name='instrument')
                    each instrument, i in instruments
                        option(value= instrument._id) #{instrument.title} 
            .form-group
                label Author:
                input.form-control(name='author', type='text')
            
            .form-group
                label Body:
                textarea.form-control(name='body')
            input.btn.btn-primary(type='submit', name ='submit' value='save')
            a.btn.btn-danger(href='/manage/articles') Back