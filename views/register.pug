extends layout

block content
    .container
        h1 #{title}
        ul.errors
            if errors
                each error,i in errors
                    li.alert.alert-danger #{error.msg}
        form(method='post', action = '/register')
            .form-group
                label Name:
                input.form-control(name='name', type='text')
            .form-group
                label Username:
                input.form-control(name='username', type='text')
            .form-group
                label Email:
                input.form-control(name='email', type='email')
            .form-group
                label Password:
                input.form-control(name='password', type='password')
            .form-group
                label Confirm Password:
                input.form-control(name='password2', type='password')
            input.btn.btn-primary(type='submit', name ='submit' value='save')
            p
                    | Have an account already? 
                    a.btn.btn-default.btn-sm(href='/login') Login